{
    "name": "maestro/workflow",
    "description": "High-performance workflow orchestration for Laravel",
    "keywords": [
        "maestro",
        "laravel",
        "workflow",
        "orchestration",
        "queue",
        "jobs",
        "state-machine"
    ],
    "homepage": "https://github.com/maestro-php/workflow",
    "license": "MIT",
    "authors": [
        {
            "name": "Maestro Contributors",
            "email": "hello@maestro.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0",
        "illuminate/database": "^11.0||^12.0",
        "illuminate/queue": "^11.0||^12.0",
        "illuminate/support": "^11.0||^12.0",
        "nesbot/carbon": "^3.0",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.23",
        "captainhook/plugin-composer": "^5.3",
        "laravel/pint": "^1.14",
        "larastan/larastan": "^3.0",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0||^9.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpbench/phpbench": "^1.3",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Maestro\\Workflow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maestro\\Workflow\\Tests\\": "tests/",
            "Maestro\\Workflow\\Benchmarks\\": "benchmarks/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@composer run prepare",
            "captainhook install --force --skip-existing"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline --memory-limit=2G",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage --min=95",
        "test-unit": "vendor/bin/pest --testsuite=Unit",
        "test-feature": "vendor/bin/pest --testsuite=Feature",
        "test-arch": "vendor/bin/pest --testsuite=Architecture",
        "format": "vendor/bin/pint",
        "format-check": "vendor/bin/pint --test",
        "refactor": "vendor/bin/rector process",
        "refactor-check": "vendor/bin/rector process --dry-run",
        "bench": "vendor/bin/phpbench run --report=default",
        "check": [
            "@format-check",
            "@analyse",
            "@test"
        ],
        "fix": [
            "@format",
            "@refactor"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "captainhook/plugin-composer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maestro\\Workflow\\MaestroServiceProvider"
            ],
            "aliases": {
                "Maestro": "Maestro\\Workflow\\Facades\\Maestro"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
